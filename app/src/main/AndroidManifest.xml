<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sonmob.vichat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/whatsapp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/whatsapp"
        android:supportsRtl="true"
        android:theme="@style/Theme.ViChat">
        <activity android:name=".view.auth.PhoneLoginActivity"></activity>
        <activity android:name=".view.startup.WelcomeScreenActivity" />
        <activity android:name=".view.startup.SplashSceenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
    </application>

</manifest>